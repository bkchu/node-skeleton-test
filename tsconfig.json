{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "esnext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "paths": {
      "ui/*": [
        "ui/*"
      ],
      "app": [
        "./app"
      ],
      "util": [
        "./util"
      ],
      "test": [
        "./test"
      ]
    },
    "sourceMap": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "typeRoots": [
      "./node_modules/@types",
      "./dts"
    ]
  },
  "include": [
    "app",
    "ui",
    "test",
    "unit-test",
    "./dts",
    "bin",
    "util"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "!node_modules/@storybook"
  ]
}
